@model List<AIPProject01.Models.ViewModel.G3_Monitor_Notice>
@{
    ViewBag.Title = "身心健康與安全管理系統";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}
<section>
    <div class="container">
        <div style="overflow:auto; border: 2px #ccc solid; padding: 10px">
            <section>
                <header style="font-size:20px;">
                    <b>通知</b>
                </header>

                <table class="table">
                    <tr>
                        <th class="col-sm-1">發出者</th>
                        <th class="col-sm-1">接收人</th>
                        <th class="col-sm-1">通知時間</th>
                        <th class="col-sm-1">狀態</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="active">
                                @item.User
                            </td>
                            <td class="info">
                                @item.Object
                            </td>
                            <td class="warning">
                                @item.MeasurementDate
                            </td>                    
                            @if (@item.status == 1)
                            {
                                <td class="active">
                                    未處理
                                </td>
                            }
                            else
                            {
                                <td class="active">
                                    已處理
                                </td>
                            }                                
                        </tr>
                    }
                </table>
                <input type="button" value="返回" onclick="re()" />
            </section>
        </div>
    </div>
</section>


