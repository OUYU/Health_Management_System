<section>
    <div class="container">
        <div style="overflow:auto; height: 650px; border: 2px #ccc solid; padding: 10px">
            <header style="font-size:20px;">
                <fieldset>
                    <div class="display-label">
                        <h1>@Html.DisplayFor(model => model.UserName)</h1>
                    </div>
                    <div class="display-label">
                        <h3>標題:</h3>
                    </div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.Nutrition.Title)
                    </div>

                    <div class="display-label">
                        <h3>文章內容:</h3>
                    </div>
                    <div class="display-field">
                        <span style="white-space: pre-wrap">@Html.DisplayFor(model => model.Nutrition.Content)</span>
                    </div>
                    <hr>
                    發表於
                    @Html.DisplayFor(model => model.Nutrition.Date)
                    <hr>

                </fieldset>
                <p>
                    <a href="@Url.Action("Edit", "Nutrition", new { id = @Model.Nutrition.Id })" class="btn btn-primary" style="color:white;">
                        編輯
                    </a>
                    <a href="@Url.Action("Delete", "Nutrition", new { id = @Model.Nutrition.Id })" class="btn btn-primary" style="color:white;">
                        刪除
                    </a>
                    <a href="@Url.Action("View", "Nutrition", new { id = @Model.Nutrition.UserId })" class="btn btn-primary" style="color:white;">
                        返回
                    </a>
                </p>
            </header>
        </div>
    </div>
</section>
