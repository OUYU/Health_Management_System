<section>
    <div class="container">
        <div style="overflow:auto; height: 650px; border: 2px #ccc solid; padding: 10px">
            <header style="font-size:20px;">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset>
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.Doctor)

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Title, "建議標題")
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Title)
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Content, "建議內容")
                        </div>

                        @Html.TextAreaFor(model => model.Content)

                        <p>
                            <button type="submit" class="btn btn-primary">儲存</button>
                            <a href="@Url.Action("View", "Nutrition", new { id = Model.UserId })" class="btn btn-primary" style="color:white;">
                                返回
                            </a>
                        </p>
                    </fieldset>
                }
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </header>
        </div>
    </div>
</section>
