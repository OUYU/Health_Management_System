@{
    ViewBag.Title = "身心健康與安全管理系統";
    ViewBag.Message = "建議檢視.健康建議";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
