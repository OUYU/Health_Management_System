@model AIPProject01.ViewModels.BloodPressureIn

@{
    ViewBag.Title = "身心健康與安全管理系統";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}

<section>
    <div class="container">
        <div style="overflow:auto; border: 2px #ccc solid; padding: 10px">
            <header style="font-size:20px;">
                <div>
                    <form action="BloodPressureOutput" method="post">
                        <p>
                            <h3>
                                收縮壓 : <input id="SBP" name="SBP" type="text" pattern="[0-9]*" required /> mm/Hg
                            </h3>
                        </p>
                        <p>
                            <h3>
                                舒張壓 : <input id="DBP" name="DBP" type="text" pattern="[0-9]*" required /> mm/Hg
                            </h3>
                        </p>
                        <p>
                            <h3>
                                量測日期 : <input id="date" name="date" type="date" required />
                            </h3>
                        </p>
                        <p>
                            <h3>
                                量測時間 : <input id="time" name="time" type="time" required />
                            </h3>
                        </p>

                        <input type="submit" value="提交" />
                        <input type="reset" value="重新填寫" />
                    </form>
                </div>
            </header>
        </div>
    </div>
</section>
