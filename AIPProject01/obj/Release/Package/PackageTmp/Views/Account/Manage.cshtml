@model AIPProject01.Models.ViewModel.G1_User_Account

@{
    ViewBag.Title = "身心健康與安全管理系統";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}

<section>

    <div class="container">
        <div style="overflow:auto; width:100%; border: 2px #ccc solid; padding: 10px">
            <header style="font-size:20px;">
                <dl>
                    <dt style='font-size:30px;'>ID :   @Model.id</dt>

                    <dt style='font-size:30px;'>帳號 :  @Model.email</dt>

                    <dt style='font-size:30px;'>密碼 :  @Model.passwd</dt>
                </dl>
                @{
                    if (@Model.email == "AAA")
                    {
                        <button type="submit" class="btn btn-primary" onclick="Userdelete()">刪除帳號</button>
                    }
                } 
            </header>
        </div>
    </div>
</section>
