<section>
    <div class="container">
        <div style="overflow:auto; height: 650px; border: 2px #ccc solid; padding: 10px">
            <header style="font-size:20px;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <fieldset>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Title, "標題")
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Title)
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Content, "文章內容")
                        </div>
                        <form action="Create" method="post">
                            <textarea name="Content" class="form-control" rows="3"></textarea><br>
                        </form>


                        <p>
                            <button type="submit" class="btn btn-primary">送出</button>
                            <a href="@Url.Action("Index", "HealthEducation")" class="btn btn-primary" style="color:white;">
                                返回
                            </a>
                        </p>

                    </fieldset>
                }
            </header>
        </div>
    </div>
</section>



